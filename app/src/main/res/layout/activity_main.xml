<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<TextView
    android:id="@+id/tvGrading"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="10dp"
    android:textSize="13sp"
    android:text="System: Sci"
    app:layout_constraintBottom_toTopOf="@+id/tvDisplay"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />
<TextView
    android:id="@+id/tvDisplay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:text="0"
    android:textSize="46sp"
    app:layout_constraintBottom_toTopOf="@+id/tvGrade"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvGrading"/>

    <TextView
        android:id="@+id/tvGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="0"
        android:textSize="46sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tvPoint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplay"/>

    <TextView
        android:id="@+id/tvPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="0"
        android:textSize="46sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGrade"/>

    <TableLayout
        android:layout_margin="8dp"
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPoint">
        <TableRow
            
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:textSize="20sp"
                android:id="@+id/buttonSys"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="ART"/>
        </TableRow>
             <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:textSize="20sp"
                android:id="@+id/buttonClear"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="CLR"/>

            <Button
                android:textSize="20sp"
                android:id="@+id/buttonDel"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="Del"/>
            <Button
                android:textSize="15sp"
                android:id="@+id/buttonMode"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="MODE"/>
                 <Button
                     android:textSize="20sp"
                     android:id="@+id/buttonAdd"
                     android:layout_width="80dp"
                     android:layout_height="60dp"
                     android:layout_margin="3dp"
                     android:text="+"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:textSize="20sp"
                android:id="@+id/button7"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="7"/>
            <Button
                android:textSize="20sp"
                android:id="@+id/button8"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="8"/>
            <Button
                android:textSize="20sp"
                android:id="@+id/button9"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="9"/>
            <Button
                android:textSize="20sp"
                android:id="@+id/buttonSub"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="-"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:textSize="20sp"
                android:id="@+id/button4"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="4"/>
            <Button
                android:textSize="20sp"
                android:id="@+id/button5"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="5"/>
            <Button
                android:textSize="20sp"
                android:id="@+id/button6"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="6"/>
            <Button
                android:textSize="20sp"
                android:id="@+id/buttonMul"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="*"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:textSize="20sp"
                android:id="@+id/button1"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="1"/>
            <Button
                android:textSize="20sp"
                android:id="@+id/button2"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="2"/>
            <Button
                android:textSize="20sp"
                android:id="@+id/button3"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="3"/>
            <Button
                android:textSize="20sp"
                android:id="@+id/buttonDiv"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="/"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:textSize="20sp"
                android:id="@+id/buttonSign"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="+/-"/>
            <Button
                android:textSize="20sp"
                android:id="@+id/button0"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="0"/>
            <Button
                android:textSize="20sp"
                android:id="@+id/buttonDot"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="."/>
            <Button
                android:textSize="20sp"
                android:id="@+id/buttonEquals"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:text="="/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>